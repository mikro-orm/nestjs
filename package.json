{
  "name": "@mikro-orm/nestjs",
  "version": "4.0.0-alpha.1",
  "license": "MIT",
  "author": {
    "name": "Dario Mancuso",
    "email": "dario@ewide.eu"
  },
  "keywords": [
    "nestjs",
    "mikro-orm",
    "orm",
    "mongo",
    "mongodb",
    "mysql",
    "postgresql",
    "sqlite",
    "entity",
    "ddd",
    "mikro-orm",
    "unit-of-work",
    "data-mapper",
    "identity-map"
  ],
  "description": "NestJS module for MikroORM",
  "homepage": "https://github.com/mikro-orm/nestjs#readme",
  "bugs": "https://github.com/mikro-orm/nestjs/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikro-orm/nestjs"
  },
  "readme": "./README.md",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json && cp package.json README.md dist/",
    "test": "jest --runInBand",
    "tsc-check-tests": "tsc --noEmit --project tests/tsconfig.json",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "release": "yarn build && cd dist && npm publish && cd ..",
    "coverage": "yarn test --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls",
    "lint": "eslint src/**/*.ts"
  },
  "peerDependencies": {
    "@mikro-orm/core": "^4.0.0-alpha.7",
    "@nestjs/common": "^7.0.0",
    "@nestjs/core": "^7.0.0"
  },
  "devDependencies": {
    "@mikro-orm/core": "^4.0.0-alpha.7",
    "@mikro-orm/sqlite": "^4.0.0-alpha.7",
    "@nestjs/common": "^7.3.2",
    "@nestjs/core": "^7.3.2",
    "@nestjs/testing": "^7.3.2",
    "@types/jest": "^26.0.5",
    "@typescript-eslint/eslint-plugin": "~3.5.0",
    "@typescript-eslint/parser": "~3.5.0",
    "conventional-changelog": "^3.1.21",
    "eslint": "^7.5.0",
    "eslint-plugin-jsdoc": "^30.0.0",
    "jest": "^26.1.0",
    "rxjs": "^6.6.0",
    "ts-jest": "^26.1.3",
    "typescript": "3.9.7"
  },
  "jest": {
    "testTimeout": 30000,
    "preset": "ts-jest",
    "collectCoverage": false,
    "collectCoverageFrom": [
      "<rootDir>/src/**/*.ts"
    ],
    "modulePathIgnorePatterns": [
      "dist/package.json",
      "<rootDir>/package.json"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint src/**/*.ts --fix"
    ]
  },
  "renovate": {
    "extends": [
      "config:base"
    ],
    "pinVersions": false
  },
  "engines": {
    "node": ">= 10.13.0"
  }
}
