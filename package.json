{
  "name": "@mikro-orm/nestjs",
  "version": "5.0.2",
  "license": "MIT",
  "author": {
    "name": "Martin Adamek",
    "email": "banan23@gmail.com"
  },
  "keywords": [
    "nestjs",
    "mikro-orm",
    "orm",
    "mongo",
    "mongodb",
    "mysql",
    "postgresql",
    "sqlite",
    "entity",
    "ddd",
    "mikro-orm",
    "unit-of-work",
    "data-mapper",
    "identity-map"
  ],
  "description": "NestJS module for MikroORM",
  "homepage": "https://github.com/mikro-orm/nestjs#readme",
  "bugs": "https://github.com/mikro-orm/nestjs/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/mikro-orm/nestjs"
  },
  "readme": "./README.md",
  "scripts": {
    "build": "rm -rf dist && tsc -p tsconfig.build.json && cp package.json README.md dist/",
    "test": "jest --runInBand",
    "tsc-check-tests": "tsc --noEmit --project tests/tsconfig.json",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 1",
    "release": "yarn build && cd dist && npm publish && cd ..",
    "coverage": "yarn test --coverage",
    "lint": "eslint src/**/*.ts"
  },
  "peerDependencies": {
    "@mikro-orm/core": "^5.0.0",
    "@mikro-orm/knex": "^5.0.0",
    "@mikro-orm/mongodb": "^5.0.0",
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0"
  },
  "peerDependenciesMeta": {
    "@mikro-orm/knex": {
      "optional": true
    },
    "@mikro-orm/mongodb": {
      "optional": true
    }
  },
  "devDependencies": {
    "@mikro-orm/core": "^5.0.3",
    "@mikro-orm/knex": "^5.0.3",
    "@mikro-orm/mongodb": "^5.0.3",
    "@mikro-orm/sqlite": "^5.0.3",
    "@nestjs/common": "^8.2.6",
    "@nestjs/core": "^8.2.6",
    "@nestjs/platform-express": "^8.2.6",
    "@nestjs/testing": "^8.2.6",
    "@types/jest": "^28.0.0",
    "@types/node": "^17.0.17",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "~5.26.0",
    "@typescript-eslint/parser": "~5.26.0",
    "conventional-changelog": "^3.1.25",
    "conventional-changelog-cli": "^2.2.2",
    "eslint": "^8.9.0",
    "jest": "^28.0.0",
    "rxjs": "^7.5.4",
    "supertest": "^6.2.2",
    "ts-jest": "^28.0.0",
    "ts-node": "^10.5.0",
    "typescript": "4.6.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint src/**/*.ts --fix"
    ]
  },
  "renovate": {
    "extends": [
      "config:base",
      ":preserveSemverRanges",
      ":semanticCommitTypeAll(chore)"
    ],
    "semanticCommits": "enabled",
    "separateMajorMinor": false,
    "dependencyDashboard": false,
    "packageRules": [
      {
        "matchUpdateTypes": [
          "patch",
          "minor"
        ],
        "groupName": "patch/minor dependencies",
        "groupSlug": "all-non-major",
        "automerge": true,
        "automergeType": "branch"
      }
    ],
    "schedule": [
      "every weekday"
    ]
  },
  "engines": {
    "node": ">= 14.0.0"
  }
}
